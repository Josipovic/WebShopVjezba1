@model List<WebShop.Models.Category>

<div style="border:1px solid lightgray; border-radius:7px;
float:right;padding:10px;margin-top:10px;">
<h3>Kategorije</h3>
    <hr />
<ul style="list-style:none;padding:0 " >
    @foreach (var cat in Model)
    {
        <li><b>@Html.ActionLink(cat.Name, "GetProducts",
              new {categoryId=cat.Id })</b></li>
        <hr />
    
    }
    
</ul>
</div>
