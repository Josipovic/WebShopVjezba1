@model WebShop.Models.AdressInformation
@{
    ViewBag.Title = "Checkout";
}

<h3>Unesite Vaše podatke:</h3>


@using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Ime:")
        @Html.TextBoxFor(m => m.FirstName,new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Prezime:")
        @Html.TextBoxFor(m => m.LastName,new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Adresa:")
        @Html.TextBoxFor(m => m.Adress,new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Grad:")
        @Html.TextBoxFor(m => m.City,new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Poštanski broj:")
        @Html.TextBoxFor(m => m.ZipCode,new{@class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Telefon:")
    @Html.TextBoxFor(m => m.PhoneNumber,new {@class="form-control" })
    </div>
    
    <input type="submit" value="Naruči" class="btn btn-danger" />
}